#include <stdio.h>

int main() {
    int num1, num2, num3;

    // Solicita os três valores do usuário
    printf("Digite o primeiro valor: ");
    scanf("%d", &num1);
    printf("Digite o segundo valor: ");
    scanf("%d", &num2);
    printf("Digite o terceiro valor: ");
    scanf("%d", &num3);

    // Verifica qual é o menor valor
    int menor = num1; // Suponha que o primeiro número é o menor inicialmente
    if (num2 < menor) {
        menor = num2;
    }
    if (num3 < menor) {
        menor = num3;
    }

    // Mostra o menor valor
    printf("O menor valor digitado é: %d\n", menor);

    return 0;
}
