#include <stdio.h>

int main() {
    int numero_mes;

    // Solicita um número de mês entre 1 e 12 até que seja válido
    while(1) {
        printf("Digite o número do mês (entre 1 e 12): ");
        scanf("%d", &numero_mes);

        if(numero_mes >= 1 && numero_mes <= 12) {
            break; // Sai do loop se o número do mês for válido
        } else {
            printf("Número de mês inválido. Por favor, digite novamente.\n");
        }
    }

    // Imprime o número e o nome do mês correspondente
    switch(numero_mes) {
        case 1:
            printf("Janeiro\n");
            break;
        case 2:
            printf("Fevereiro\n");
            break;
        case 3:
            printf("Março\n");
            break;
        case 4:
            printf("Abril\n");
            break;
        case 5:
            printf("Maio\n");
            break;
        case 6:
            printf("Junho\n");
            break;
        case 7:
            printf("Julho\n");
            break;
        case 8:
            printf("Agosto\n");
            break;
        case 9:
            printf("Setembro\n");
            break;
        case 10:
            printf("Outubro\n");
            break;
        case 11:
            printf("Novembro\n");
            break;
        case 12:
            printf("Dezembro\n");
            break;
    }

    return 0;
}
